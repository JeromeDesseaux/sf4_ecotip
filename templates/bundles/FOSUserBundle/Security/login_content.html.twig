{% trans_default_domain 'FOSUserBundle' %}
<div class="container mx-auto flex justify-center flex-wrap">
  <h1 class="text-4xl w-full mb-5">Please sign in</h1>

  {% if error %}
  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form action="{{ path("fos_user_security_check") }}" method="post" class="w-full">
    {% if csrf_token %}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="my-3 w-full">
      <label for="username">{{ 'security.login.username'|trans }}</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
        autocomplete="username"
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" />
    </div>

    <div class="my-3 w-full">
      <label for="password">{{ 'security.login.password'|trans }}</label>
      <input type="password" id="password" name="_password" required="required" autocomplete="current-password"
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" />
    </div>

    <div class="my-3 w-full">
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
      <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
      class="my-3 shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" />
  </form>
</div>
